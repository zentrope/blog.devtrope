<configuration scan="true">

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} | sb | %-17t | %-5level %-20c{15} | %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.eclipse" level="off"/>

  <root level="info">
    <appender-ref ref="stdout"/>
  </root>

</configuration>
